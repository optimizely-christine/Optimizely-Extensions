{
  "plugin_id": "butter_bar_ext",
  "plugin_type": "widget",
  "name": "Banner Bar",
  "edit_page_url": "https://optimizely.com",
  "form_schema": [
    {
      "default_value": "#2a2e59",
      "field_type": "color",
      "name": "bg_color",
      "label": "Background Color",
      "options": {
        "mode": "hex"
      }
    },
    {
      "default_value": "rgba(20, 178, 161, 1)",
      "field_type": "color",
      "name": "bg_color2",
      "label": "Background Color 2",
      "options": {
        "mode": "rgba"
      }
    },
    {
      "default_value": "#ffffff",
      "field_type": "color",
      "name": "color",
      "label": "Text Color",
      "options": {
        "mode": "hex"
      }
    },
    {
      "default_value": "#",
      "field_type": "text",
      "name": "link",
      "label": "Destination Link",
      "options": null
    },
    {
      "default_value": "Get Started Now",
      "field_type": "text",
      "name": "link_text",
      "label": "Link Text",
      "options": null
    },
    {
      "default_value": "#ffffff",
      "field_type": "color",
      "name": "link_color",
      "label": "Link Color",
      "options": {
        "mode": "hex"
      }
    },
    {
      "default_value": "Welcome",
      "field_type": "text",
      "name": "text",
      "label": "Main Text",
      "options": null
    }
  ],
  "description": "Displays a banner bar at the top of the page.",
  "options": {
    "html": "<div id=\"optimizely-widget-{{ widget.$instance }}\" class=\"butter_bar\" style=\"background:-webkit-linear-gradient(left, {{ widget.bg_color }}, {{ widget.bg_color2 }}); color:{{widget.color}}\">\n  {{ widget.text }} | <a href=\"{{ widget.link }}\" style=\"color:{{widget.link_color}}\">{{ widget.link_text }}</a>\n</div>",
    "css": ".butter_bar {\n  font-size: 18px;\n  vertical-align: middle;\n  line-height: 1.4;\n  text-decoration: none;\n  text-align: center;\n  display: block;\n  font-size: 20px;\n  font-weight: 600;\n  color: #005da6;\n  padding: 10px 0px;\n  font-family: myriad-pro,sans-serif;\n  \n}",
    "apply_js": "$(function() {\n  $('body').prepend(widget.$html);\n  //$('.head').css( \"height\", \"97px\" );\n  //setTimeout(function(){ $('.butter_bar').hide(); $('.head').css( \"height\", \"55px\" );}, 4000);\n});",
    "undo_js": "$('#optimizely-widget-' + widget.$instance).remove();"
  }
}
